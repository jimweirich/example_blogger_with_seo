<h3>Post a Comment</h3>
<%= form_for(@comment) do |f| %>
<%= render "shared/errors", model: @comment %>
<%= hidden_field_tag :article_id, @article.id%>
<p>
  <%= f.label :author_name, "Your name" %><br />
  <%= f.text_field :author_name %>
</p>
<p>
  <%= f.label :body %><br />
  <%= f.text_area :body %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>
