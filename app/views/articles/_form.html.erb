<%= form_for(@article) do |f| %>
<ul>
  <% @article.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<p>
  <%= f.label :title %><br />
  <%= f.text_field :title %>
</p>
<p>
  <%= f.label :body %><br />
  <%= f.text_area :body %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>
